@using WebBanMayTinh.Models.AdminViewModels
@using WebBanMayTinh.HtmlHelpers
@model ProductTypeList
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel">
    <div class="panel-heading  text-center" style="background-color:#978bce">
        <h3 style="color:white">@ViewBag.Heading</h3>
    </div>
    
    <div class="panel-body">
        <div>
            @Html.ActionLink("Add a new product", "Create", null,
                            new { @class = "btn btn-primary" })
        </div>
        <table class="table table-striped table-condensed table-bordered">
            <thead>
                <tr>
                    <th class="text-center">Tên</th>
                    <th class="text-center">Ảnh</th>
                    <th class="text-center"> Mô tả</th>
                    <th class="text-center">Giá</th>
                    <th class="text-center">Nhà cung cấp</th>
                    <th class="text-center">Danh mục</th>
                    <th class="text-center">Giảm giá</th>
                    <th class="text-center">Chức năng</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ProductTypes)
                {
                    <tr>
                        <td style="vertical-align:middle">@Html.DisplayFor(modelItem => item.Ten)</td>
                        <td style="vertical-align:middle"><img src="~/Content/img/@item.Anh" alt="" width="100" height="100"></td>
                        <td style="vertical-align:middle">@Html.DisplayFor(modelItem => item.MoTa)</td>
                        <td style="vertical-align:middle">@Html.DisplayFor(modelItem => item.Gia)</td>
                        <td style="vertical-align:middle">@Html.DisplayFor(modelItem => item.NhaCungCap.Ten)</td>
                        <td style="vertical-align:middle">@Html.DisplayFor(modelItem => item.DanhMucSP.Ten)</td>
                        <td style="vertical-align:middle">@Html.DisplayFor(modelItem => item.GiamGia)%</td>
                        <td style="vertical-align:middle">
                            @Html.ActionLink("Edit", "Edit", new { productTypeId = item.ID }, new { @class = "btn btn-primary" })
                            @Html.ActionLink("Detail", "Detail", new { productTypeId = item.ID }, new { @class = "btn btn-info" })
                            @Html.ActionLink("Delete", "Delete", new { productTypeId = item.ID }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="8" class="text-right">
                        @Html.CreatePageLinks(Model.PagingInfo, x => Url.Action("Index", Model.CurrentCategoryNav, new { page = x }))
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
